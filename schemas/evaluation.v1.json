      "items": {
        "type": "string"
      },
      "title": "Incorrect Points",
      "type": "array"
    },
    "ideal_answer": {
      "minLength": 1,
      "title": "Ideal Answer",
      "type": "string"
    },
    "improvement_tips": {
      "items": {
        "type": "string"
      },
      "title": "Improvement Tips",
      "type": "array"
    },
    "clarifying_questions": {
      "items": {
        "type": "string"
      },
      "maxItems": 3,
      "title": "Clarifying Questions",
      "type": "array"
    },
    "followup_question": {
      "default": "",
      "title": "Followup Question",
      "type": "string"
    }
